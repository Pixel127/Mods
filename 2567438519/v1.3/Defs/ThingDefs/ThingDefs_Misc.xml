<?xml version="1.0" encoding="utf-8" ?>
    <Defs>
        <ThingDef ParentName="BuildingBase">
            <defName>LTS_Growingpit</defName>
            <label>round growing pit</label>
            <description>A pit to house a small garden.</description>
            <thingClass>Building_PlantGrower</thingClass>
            <graphicData>
                <texPath>Buildings/Growingpit3x2</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <shaderType>CutoutComplex</shaderType>
                <drawSize>(2.7 ,1.8)</drawSize>
                <drawOffset>(0,0,-0.1)</drawOffset>
                <damageData>
                    <cornerTL>Damage/Corner</cornerTL>
                    <cornerTR>Damage/Corner</cornerTR>
                    <cornerBL>Damage/Corner</cornerBL>
                    <cornerBR>Damage/Corner</cornerBR>
                </damageData>
            </graphicData>
            <size>3,2</size>
            <castEdgeShadows>true</castEdgeShadows>
            <altitudeLayer>LowPlant</altitudeLayer>
            <passability>PassThroughOnly</passability>
            <pathCost>30</pathCost>
            <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
            <uiIconPath>Buildings/Growingpit3x2_north</uiIconPath>
            <fillPercent>0.20</fillPercent>
            <statBases>
                <WorkToBuild>2000</WorkToBuild>
                <MaxHitPoints>250</MaxHitPoints>
                <Flammability>0.5</Flammability>
                <Beauty>2</Beauty>
            </statBases>
            <costList>
                <WoodLog>50</WoodLog>
            </costList>
            <costStuffCount>100</costStuffCount>
            <stuffCategories>
                <li>Stony</li>
            </stuffCategories>
            <fertility>1</fertility>
            <building>
                <isInert>true</isInert>
                <ai_chillDestination>false</ai_chillDestination>
                <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
                <defaultPlantToGrow>Plant_Rice</defaultPlantToGrow>
                <sowTag>Ground</sowTag>
                <buildingTags>
                    <li>Production</li>
                </buildingTags>
            </building>
            <tickerType>Rare</tickerType>
            <comps>
                <li Class="CompProperties_Forbiddable" />
            </comps>
            <researchPrerequisites>
                <li>Stonecutting</li>
            </researchPrerequisites>
            <designationCategory>Production</designationCategory>
        </ThingDef>

