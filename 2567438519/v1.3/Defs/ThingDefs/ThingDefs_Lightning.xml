        <!--Firepit-->
        <ThingDef ParentName="LTS_FireSourceBase">
            <defName>LTS_Firepit</defName>
            <label>fire pit</label>
            <description>A pit made to house a fire.</description>
            <graphicData>
                <texPath>Light/Firepit3x2</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <shaderType>CutoutComplex</shaderType>
                <drawSize>(2.4 ,1.6)</drawSize>
                <damageData>
                    <cornerTL>Damage/Corner</cornerTL>
                    <cornerTR>Damage/Corner</cornerTR>
                    <cornerBL>Damage/Corner</cornerBL>
                    <cornerBR>Damage/Corner</cornerBR>
                </damageData>
            </graphicData>
            <size>(3,2)</size>
            <researchPrerequisites>
                <li>Stonecutting</li>
            </researchPrerequisites>
            <interactionCellOffset>(0,0,-1)</interactionCellOffset>
            <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
            <uiIconPath>Light/Firepit3x2_north</uiIconPath>
            <passability>Impassable</passability>
            <fillPercent>0.20</fillPercent>
            <statBases>
                <Beauty>10</Beauty>
                <Mass>100</Mass>
                <MaxHitPoints>250</MaxHitPoints>
                <WorkToBuild>2000</WorkToBuild>
                <Flammability>0</Flammability>
                <WorkTableWorkSpeedFactor>0.75</WorkTableWorkSpeedFactor>
                <MeditationFocusStrength>0.0</MeditationFocusStrength>
            </statBases>
            <costList>
                <WoodLog>50</WoodLog>
            </costList>
            <costStuffCount>100</costStuffCount>
            <stuffCategories>
                <li>Stony</li>
            </stuffCategories>
            <comps>
                <li Class="CompProperties_Refuelable">
                    <fuelConsumptionRate>5.0</fuelConsumptionRate>
                    <fuelCapacity>50.0</fuelCapacity>
                    <fuelFilter>
                        <thingDefs>
                            <li>WoodLog</li>
                        </thingDefs>
                    </fuelFilter>
                    <initialFuelPercent>1</initialFuelPercent>
                    <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
                </li>
                <li Class="CompProperties_Glower">
                    <glowRadius>12</glowRadius>
                    <glowColor>(252,187,113,0)</glowColor>
                </li>
                <li Class="CompProperties_HeatPusher">
                    <compClass>CompHeatPusherPowered</compClass>
                    <heatPerSecond>21</heatPerSecond>
                    <heatPushMaxTemperature>28</heatPushMaxTemperature>
                </li>
                <li Class="Furnishing.Components.CompProps_DirectionalFire">
                    <fireSize>1.4</fireSize>
                    <offset>(0,0,0.1)</offset>
                    <rotationsAccepted>
                        <li>South</li>
                        <li>East</li>
                        <li>West</li>
                        <li>North</li>
                    </rotationsAccepted>
                </li>
                <li>
                    <compClass>CompGatherSpot</compClass>
                </li>
                <li Class="CompProperties_MeditationFocus">
                    <statDef>MeditationFocusStrength</statDef>
                    <focusTypes>
                        <li>Flame</li>
                    </focusTypes>
                    <offsets>
                        <li Class="FocusStrengthOffset_Lit">
                            <offset>0.25</offset>
                        </li>
                        <li Class="FocusStrengthOffset_BuildingDefsLit">
                            <defs>
                                <li>Campfire</li>
                                <li>TorchLamp</li>
                                <li>LTS_FirepitRound</li>
                                <li>LTS_Fireplace</li>
                                <li MayRequire="Ludeon.RimWorld.Royalty">Brazier</li>
                            </defs>
                            <offsetPerBuilding>0.02</offsetPerBuilding>
                            <radius>9.9</radius>
                            <maxBuildings>8</maxBuildings>
                            <explanationKey>MeditationFocusPerFlame</explanationKey>
                            <explanationKeyAbstract>MeditationFocusPerFlameAbstract</explanationKeyAbstract>
                        </li>
                    </offsets>
                </li>
            </comps>
        </ThingDef>
