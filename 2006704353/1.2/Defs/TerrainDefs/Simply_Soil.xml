<?xml version="1.0" encoding="utf-8"?>

<Defs>
	
	<!-- Stony Soil -->

  <TerrainDef>
    <defName>FSFSoilStony</defName>
    <label>stony soil</label>
    <description>Poor quality stony soil with a rather awful gravel taste.</description>
	<designatorDropdown>FSF_SimplySoilFloor</designatorDropdown>
    <researchPrerequisites>
		<li>FSFRegularGardenSoil</li>
	</researchPrerequisites>
    <texturePath>Terrain/Surfaces/Gravel</texturePath>
    <edgeType>Hard</edgeType>
    <renderPrecedence>320</renderPrecedence>
    <pathCost>2</pathCost>
    <statBases>
      <Beauty>-1</Beauty>
      <Cleanliness>-1</Cleanliness>
      <WorkToBuild>800</WorkToBuild>
    </statBases>
    <costList>
      <FSFItemSoilStony>10</FSFItemSoilStony>
    </costList>
    <scatterType>Rocky</scatterType>
    <designationCategory>Floors</designationCategory>
    <constructEffect>ConstructDirt</constructEffect>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
      <li>GrowSoil</li>
      <li>Diggable</li>
    </affordances>
	<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <layerable>true</layerable>
	<filthAcceptanceMask>
		<li>Unnatural</li>
	</filthAcceptanceMask>
    <fertility>0.7</fertility>
    <takeFootprints>True</takeFootprints>
    <tools>
      <li>
        <label>gravel</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>GravelInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </TerrainDef>
	
