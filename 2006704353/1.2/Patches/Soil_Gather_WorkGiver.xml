<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			
	<!-- Stony Soil -->
		
			<li Class="PatchOperationAdd">
				<xpath>/Defs/WorkGiverDef[defName = "DoBillsUseCraftingSpot"]/fixedBillGiverDefs</xpath>
					<value>
						<li>FSFItemSoilStonyGatherSpot</li>
					</value>
			</li>

	<!-- Regular Soil -->
		
			<li Class="PatchOperationAdd">
				<xpath>/Defs/WorkGiverDef[defName = "DoBillsUseCraftingSpot"]/fixedBillGiverDefs</xpath>
					<value>
						<li>FSFItemSoilGatherSpot</li>
					</value>
			</li>
			
	<!-- Rich Soil -->
		
			<li Class="PatchOperationAdd">
				<xpath>/Defs/WorkGiverDef[defName = "DoBillsUseCraftingSpot"]/fixedBillGiverDefs</xpath>
					<value>
						<li>FSFItemSoilRichGatherSpot</li>
					</value>
			</li>
			
		</operations>
	</Operation>
	
</Patch>